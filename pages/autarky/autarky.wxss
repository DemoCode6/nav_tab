@import '/iconfont/iconfont.wxss';
page{
    background-color: rgb(248, 248, 248);
}
.autarky_top{
    display: flex;
    justify-content: space-between;
    width: 80%;
    margin: auto;
    margin-top: 30rpx;
}
.autarky_top .icon-shoucang{
  font-size: 40rpx;
}
.autarky_top .icon-shoucang1{
  font-size: 40rpx;
  color: #FFCC00;
}
/* 搜索框 */
.clear:after{
  content: "";
  clear: both;
  display:block;
  height: 0;
  overflow: hidden;
  visibility: hidden;
}
.list_search{
  position: relative;
}
.list_search input{
  width: 75%;
  border-radius: 30rpx;
  margin: auto;
  height: 65rpx;
  font-size: 28rpx;
  padding-left: 10rpx;
  box-sizing: border-box;
  margin-top: 50rpx;
  background: #fff;
}
.list_search .icon-search{
  position: absolute;
  top: 20rpx;
  right: 125rpx;
  font-weight: bolder;
  color: rgb(165, 164, 164);
}
/* 选项卡 */
.nav{
  display: flex;
  height: 80rpx;
  line-height: 80rpx;
  margin-top: 40rpx;
  border-bottom: 8rpx solid #e1e1e1;
}
.nav view{
  flex: 1;
  text-align: center;
}
.active{
  color: #d1273f;
}
/* 选项卡内容 */
.nav_main{
  display: flex;
  flex-wrap:wrap;
  justify-content: space-between;
  width: 100%;
}
.nav_main1{
    background: #fff;
    font-size: 26rpx;
    color: #c1c1c1;
    width: 48%;
    margin-bottom: 20rpx;
}
.nav_main1 image{
    width: 100%;
    height: 350rpx;
}
.nav_main1 .goods_title{
    margin: 10rpx 0 40rpx 20rpx;
    color: #333;
}
.nav_main1 .goods_price{
    color: #d1273f;
    font-weight: bolder;
    margin: 0 0 10rpx 16rpx;
}
.nav_main1 .goods_sold{
    margin-left:16rpx;
}
.nav_main .meiyou{
    font-size: 26rpx;
    padding: 30rpx 0;
    color: rgb(99, 99, 99);
    margin: auto;
}